{
  "name": "ProChroEx",
  "description": "V1",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_icon": "hello_extensions.png",
    "default_popup": "popup.html"
  },
  "background": {"service_worker": "background.js"},
  "permissions": [
    "storage","geolocation","notifications","declarativeNetRequest"
  ],
  "declarative_net_request": {
    "rule_resources":[
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at":"document_start",
      "all-frames": true ,
      "js": ["Hydration.js","Pomodoro.js"]
    }
  ]
}
